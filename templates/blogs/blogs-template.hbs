<h1 class="py-2">Blogs</h1>
{{#each data}}
    <div class= "clearfix py-3">
    <h3>{{name}}</h3>
    <p class="text-black-50">by {{author}} in 
        <a href="#" onclick = "loadBlogs('blogs/categories/{{categoryId}}')">{{category.name}}</a> on {{formatDate date}}. 
        <a href="#" 
        onclick = "loadBlogsDetail({{id}}, true)">Comments ({{comments.length}})</a>
    </p>
    <div class="">
        <img src="{{thumbpath}}" alt="blogImage" class="float-start rounded-4 me-3 img-thumbnail">
        <p class="text-black-50">{{{summary}}}</p>
        <a href="#" class="btn btn-link readmore py-0 ps-0" onclick = "loadBlogsDetail({{id}})">Read more</a>
    </div>
    </div>
{{/each}}
{{#pagination currentPage pageCount}}
<nav aria-label="Page navigation">
    <ul class="pagination    ">
    {{#each pages}}
        {{#if isCurrent}}
        <li class="page-item disabled" aria-current="page">
            <a class="page-link" href="#"
            onclick = "loadBlogs('{{../../request}}', {{page}})"
            >{{page}}</a>
        </li>
        {{/if}}
        {{#unless isCurrent}}
        <li class="page-item">
            <a class="page-link" href="#" onclick = "loadBlogs('{{../../request}}', {{page}})">{{page}}</a>
        </li>
        {{/unless}}
    {{/each}}
    </ul>
</nav>
{{/pagination}}